@page "/product"


<h3>IndexProduct</h3>

@if (ProductModels == null) 
{
    <p>Loading ...</p>
}
else
{
    <a class="btn btn-primary" href="/product/create">+</a>
    <table class="table">
        <thead>
           <tr>
                <td>ProductName</td>
                <td>Qty</td>
                <td>Price</td>
                <td>Description</td>
                <td>CreatedAt</td>
                <td>Action</td>
           </tr>
        </thead>
        <tbody>
            @foreach(var product in ProductModels)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.Quantity</td>
                    <td>@product.Price</td>
                    <td>@product.Description</td>
                    <td>@product.CreateAt.ToShortDateString()</td>
                    <td>
                        <a class="btn btn-outline-secondary">Update</a>
                        <button class="btn btn-danger">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
